@model IEnumerable<fff.Models.Tale>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <form asp-action="ShowSearchResults" class="mb-3">
        <div class="input-group">
            <input name="SearchPhrase" class="form-control" placeholder="Search" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

</p>
<div class="flex-container">
    @foreach (var item in Model)
    {
        <div class="flex-item">
            <img src="@Url.Content(item.File)">
            <div class="details">
                <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
            <div class="actions">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-dark">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success text-white">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Delete</a>
            </div>

        </div>
    }
</div>
